<main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
        <h1 class="h2">Pulpit Główny - OSP Czatkowice</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group mr-2">
                <button class="btn btn-sm btn-outline-secondary">Podziel się</button>
                <button class="btn btn-sm btn-outline-secondary">Eksportuj</button>
            </div>
            <button class="btn btn-sm btn-outline-secondary dropdown-toggle">
                <span data-feather="calendar"></span>
                Ten tydzień
            </button>
        </div>
    </div>

    <canvas class="my-4" id="myChart" width="900" height="380"></canvas>

    <h2>Ostatnie wyjazdy</h2>
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>Numer wyjazdu</th>
                    <th>Tytuł wyjazdu</th>
                    <th>Samochód</th>
                    <th>Ilość osób</th>
                    <th>Szczegóły</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>Pożar traw</td>
                    <td>GBA 2,3/19</td>
                    <td>6</td>
                    <td><a asp-action="Details" asp-controller="Trips" asp-route-id="1">Podgląd</a></td>
                </tr>
            </tbody>
        </table>
    </div>
</main>

<!-- Graphs -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.1/Chart.min.js"></script>
<script>
    var ctx = document.getElementById("myChart");
    var myChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: ["Niedziela", "Poniedziałek", "Wtorek", "Środka", "Czwartek", "Piątek", "Sobota"],
            datasets: [{
                data: [0, 1, 2, 0, 0, 1, 3],
                lineTension: 0,
                backgroundColor: 'transparent',
                borderColor: '#007bff',
                borderWidth: 4,
                pointBackgroundColor: '#007bff'
            }]
        },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true,
                        stepSize: 1
                    }
                }]
            },
            legend: {
                display: false,
            }
        }
    });
</script>